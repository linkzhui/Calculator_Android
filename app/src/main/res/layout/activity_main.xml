<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.raymon.calculator3.MainActivity"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/result_area"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:textSize="60dp"
            android:gravity="right"
            >
        </TextView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"

            >
            <Button android:id="@+id/btn_1"
                android:textSize = "25sp"
                android:text="1"
                android:onClick="onClick"
                android:layout_height="fill_parent"
                android:layout_width="fill_parent"
                android:layout_weight="1"
                />

            <Button
                android:id="@+id/btn_2"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:onClick="onClick"
                android:text="2"
                android:textSize="25sp" />
            <Button android:id="@+id/btn_3"
                android:text="3"
                android:onClick="onClick"
                android:layout_height="fill_parent"
                android:layout_width="fill_parent"
                android:layout_weight="1"
                android:textSize = "25sp"/>
            <Button android:id="@+id/btn_add"
                android:text="+"
                android:onClick="onClick"
                android:layout_height="fill_parent"
                android:layout_width="fill_parent"
                android:layout_weight="1"
                android:textSize = "25sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">
            <Button android:id="@+id/btn_4"
                android:text="4"
                android:onClick="onClick"
                android:layout_height="fill_parent"
                android:layout_width="fill_parent"
                android:layout_weight="1"
                android:textSize = "25sp"
                />
            <Button android:id="@+id/btn_5"
                android:text="5"
                android:onClick="onClick"
                android:layout_height="fill_parent"
                android:layout_width="fill_parent"
                android:layout_weight="1"
                android:textSize = "25sp"/>
            <Button android:id="@+id/btn_6"
                android:text="6"
                android:onClick="onClick"
                android:layout_height="fill_parent"
                android:layout_width="fill_parent"
                android:layout_weight="1"
                android:textSize = "25sp"/>
            <Button android:id="@+id/btn_minus"
                android:text="-"
                android:onClick="onClick"
                android:layout_height="fill_parent"
                android:layout_width="fill_parent"
                android:layout_weight="1"
                android:textSize = "25sp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">
            <Button android:id="@+id/btn_7"
                android:text="7"
                android:onClick="onClick"
                android:layout_height="fill_parent"
                android:layout_width="fill_parent"
                android:layout_weight="1"
                android:textSize = "25sp"
                />
            <Button android:id="@+id/btn_8"
                android:text="8"
                android:onClick="onClick"
                android:layout_height="fill_parent"
                android:layout_width="fill_parent"
                android:layout_weight="1"
                android:textSize = "25sp"
                />
            <Button android:id="@+id/btn_9"
                android:text="9"
                android:onClick="onClick"
                android:layout_height="fill_parent"
                android:layout_width="fill_parent"
                android:layout_weight="1"
                android:textSize = "25sp"
                />
            <Button android:id="@+id/btn_0"
                android:text="0"
                android:onClick="onClick"
                android:layout_height="fill_parent"
                android:layout_width="fill_parent"
                android:layout_weight="1"
                android:textSize = "25sp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">
            <Button android:id="@+id/btn_mult"
                android:text="*"
                android:onClick="onClick"
                android:layout_height="fill_parent"
                android:layout_width="fill_parent"
                android:layout_weight="1"
                android:textSize = "25sp"
                />
            <Button android:id="@+id/btn_div"
                android:text="/"
                android:onClick="onClick"
                android:layout_height="fill_parent"
                android:layout_width="fill_parent"
                android:layout_weight="1"
                android:textSize = "25sp"
                />
            <Button android:id="@+id/btn_c"
                android:text="C"
                android:onClick="onClick"
                android:layout_height="fill_parent"
                android:layout_width="fill_parent"
                android:layout_weight="1"
                android:textSize = "25sp"
                />
            <Button android:id="@+id/btn_equl"
                android:text="="
                android:onClick="onClick"
                android:layout_height="fill_parent"
                android:layout_width="fill_parent"
                android:layout_weight="1"
                android:textSize = "25sp"
                />
        </LinearLayout>
    </LinearLayout>


</LinearLayout>
